<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_coordinator_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/color_primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_user_img_size"
                android:fitsSystemWindows="true">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_user_img_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_photo"
                    android:fitsSystemWindows="true"/>

                <RelativeLayout
                    android:id="@+id/profile_placeholder_relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_profile_placeholder_image"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/profile_photo_placeholder"
                        android:layout_marginBottom="@dimen/spacing_small_8"/>

                    <ImageView
                        android:id="@+id/profile_photo_placeholder"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/add_a_photo_48px"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="56dp"/>

                </RelativeLayout>

            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:theme="@style/AppTheme.PopupOverlay"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:titleTextColor="@color/white"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary"
            android:orientation="vertical"
            tools:context=".ui.activity.MainActivity">

            <!-- head -->
            <LinearLayout
                style="@style/profile_subheader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_subheader_height"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/profile_subheader_item"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/user_info_rait_txt"
                        style="@style/profile_subheader_text"
                        android:text="@string/profile_static_rating"/>

                    <TextView
                        style="@style/profile_subheader_text.subtext"
                        android:text="@string/profile_label_rating"/>
                </LinearLayout>

                <View style="@style/profile_subheader_divider"/>

                <LinearLayout
                    style="@style/profile_subheader_item"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/user_info_code_lines_txt"
                        style="@style/profile_subheader_text"
                        android:text="@string/profile_static_codeline"/>

                    <TextView
                        style="@style/profile_subheader_text.subtext"
                        android:text="@string/profile_label_lines_count"/>
                </LinearLayout>

                <View style="@style/profile_subheader_divider"/>

                <LinearLayout
                    style="@style/profile_subheader_item"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/user_info_project_txt"
                        style="@style/profile_subheader_text"
                        android:text="@string/profile_static_project"/>

                    <TextView
                        style="@style/profile_subheader_text.subtext"
                        android:text="@string/profile_label_projects_count"/>
                </LinearLayout>
            </LinearLayout>

            <!-- body -->
            <LinearLayout style="@style/info_line_wrap">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_repository_grey_24dp"/>

                <ListView
                    android:id="@+id/repositories_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    >

                </ListView>

                <ImageView
                    android:id="@+id/profile_icon_github"
                    style="@style/icon.right"
                    android:src="@drawable/ic_remove_red_eye_black_24dp"/>

            </LinearLayout>

            <View style="@style/main_activity_divider"/>

            <LinearLayout
                style="@style/info_line_wrap"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/icon.left"/>

                <LinearLayout
                    style="@style/info_line_center_block"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/bio_et"
                            style="@style/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/about"
                            android:inputType="textMultiLine"
                            android:text="@string/about"/>

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <ImageView
                    style="@style/icon.right"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>