<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="@dimen/size_large_80"
        android:layout_marginRight="@dimen/size_large_80"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/size_medium_32">
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/red">
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВОЙТИ"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:paddingLeft="@dimen/size_small_24"
                android:textColor="@color/red"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/size_small_8"
            android:paddingLeft="@dimen/size_small_24"
            android:paddingRight="@dimen/size_small_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:textSize="@dimen/size_small_8"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:paddingLeft="@dimen/size_small_24"
            android:paddingRight="@dimen/size_small_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:textSize="@dimen/size_small_8"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пароль"
                android:textColor="@color/gray_light"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_small_16"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="@dimen/size_small_16"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_gravity="center_horizontal"
            android:text="ВОЙТИ"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыли пароль?"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_small_8"
            android:layout_marginBottom="@dimen/size_small_16"/>
    </LinearLayout>

</RelativeLayout>